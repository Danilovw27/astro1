---

const { title } = Astro.props;

import { Icon } from 'astro-icon/components';

const productos = [
{
	icon: "",
	name: "Producto 1"
},
{
	icon: "",
	name: "Producto 2"
},
{
	icon: "",
	name: "Producto 3"
}
]
---


<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mi primera pagina Astro" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-zinc-900">
			<div class=" container mx-auto flex items-center">
				<img src="public/aliexpress_logo.webp" class="h-20">
				<div class= "relative">
					<input  placeholder="Buscar" class="py-6 h-9 rounded-full pr-[640px] pl-8 outline-none ml-6">
					<div class="bg-zinc-900 right-1 top-[6px] absolute inline-block text-white rounded-xl py-1 px-2 ">
						<Icon name="mdi:search" class="size-6" />
					</div>
				</div>
				<div class="text-white inline-block ml-7">
					<Icon name="mdi:qrcode" class="size-10" />
				</div>
				<div class="inline-block ml-1">
					<p class="inline-block text-white leading-[14px] text-sm ">Descarga la app <br/> de Aliexpress</p>
				</div>
				<div class=" inline-block text-yellow-400 ml-7 ">
					<Icon name="mdi:diving-scuba-flag" class="size-7" />
				</div>
				<div class="inline-block ml-1">
					<h2 class="text-white">ES/</h2>
					<h1 class="text-white">COP!</h1>
				</div>
				<div class="inline-block ml-7 text-white">
					<Icon name="mdi:user-outline" class="size-12" />
				</div>
				<div class="inline-block ml-1">
					<h1 class="text-white">!Bienvenido</h1>
					<h1 class="text-white">Identificate/Registrate°</h1>
				</div>
				<div class="inline-block ml-7 text-white">
					<Icon name="mdi:shopping-cart" class="size-10" />
				</div>
			</div>
		</div>
		<div class="bg-zinc-900 py-5">
			<div class=" container mx-auto flex items-center">
				<div class="relative border border-amber-50 ml-20 rounded-full p-2 hover:bg-zinc-700 transition duration-300">
					<div class="text-white ml-5 inline-block absolute ">
						<Icon name="mdi:menu" class="size-8 "/>
					</div>
					<a href="" class=" text-white ml-[56px] mr-5 text-xl ">Todas las Categorías °</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300 ">
					<a href="" class=" text-white  text-xl mx-5 block p-2">NN</a>
				</div>
			    <div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl  ">Superventas</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl ">Mejores Marcas</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl ">Hogar y jardin</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl ">cabello</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl ">Moda</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl ">Accesorios</a>
				</div>
				<div class="inline-block rounded-full ml-2 hover:bg-zinc-700 transition duration-300">
					<a href="" class=" text-white mx-5 block p-2 text-xl ">Electronica</a>
				</div>
			</div>
		</div>
		<div class="container banner">
			BANNER
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="productos">Productos</a>
		</nav>
		<div class="container list ">
			{
				productos.map((productos) => <div>
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12 2C7.51 2 4 4.2 4 7v10c0 2.8 3.51 5 8 5s8-2.2 8-5V7c0-2.8-3.51-5-8-5zm0 18c-3.54 0-6-1.58-6-3v-6.67A10.52 10.52 0 0 0 12 12a10.52 10.52 0 0 0 6-1.67V17c0 1.42-2.46 3-6 3zm0-10c-3.54 0-6-1.58-6-3s2.46-3 6-3 6 1.58 6 3-2.46 3-6 3z"></path><ellipse cx="12" cy="7" rx="3" ry="1.71"></ellipse></svg>
			{productos.name}
			</div>)
			}
			
		</div>
		<div class="container categories">
			Categorias
		</div>
		<div class="container">
			<slot />
		</div>

		<div class="container footer">
			PIE DE PAGINA
		</div>
		
	</body>
</html>
<style is:global>
	.main_menu {
		display: flex;
		height: 40px;
		background-color: rgb(223, 69, 27);
	}
	.main_menu a{
		display: flex;
		align-items: center;
		padding: 0 8px;
		color: aliceblue;
		text-decoration: none;
		transition: background 300ms ease-in-out;
	}
	.main_menu a:hover{
		background: rgb(130, 134, 131);
	}
	
	.banner{
		height: 200px;
	}
	.categories{
		height: 120px;
	}
	.list {
		display: flex;
		height: 120px;
	}
	.list div{
		height: 100%;
		display: flex;
		max-width: 120px;
		text-align: center;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid rgb(17, 17, 19);
		border-radius: 4px;
		margin-right: 3px;
		
	}
	.footer{
		height: 120px;
		
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
		
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
