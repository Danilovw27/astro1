---

const { title } = Astro.props;
const productos = [
{
	icon: "",
	name: "Producto 1"
},
{
	icon: "",
	name: "Producto 2"
},
{
	icon: "",
	name: "Producto 3"
}
]
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mi primera pagina Astro" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<div class="container header_info">
				Contenido del header
			</div>
		</div>
		<div class="container banner">
			BANNER
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="productos">Productos</a>
		</nav>
		<div class="container list ">
			{
				productos.map((productos) => <div>
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12 2C7.51 2 4 4.2 4 7v10c0 2.8 3.51 5 8 5s8-2.2 8-5V7c0-2.8-3.51-5-8-5zm0 18c-3.54 0-6-1.58-6-3v-6.67A10.52 10.52 0 0 0 12 12a10.52 10.52 0 0 0 6-1.67V17c0 1.42-2.46 3-6 3zm0-10c-3.54 0-6-1.58-6-3s2.46-3 6-3 6 1.58 6 3-2.46 3-6 3z"></path><ellipse cx="12" cy="7" rx="3" ry="1.71"></ellipse></svg>
			{productos.name}
			</div>)
			}
			
		</div>
		<div class="container categories">
			Categorias
		</div>
		<div class="container">
			<slot />
		</div>

		<div class="container footer">
			PIE DE PAGINA
		</div>
		
	</body>
</html>
<style is:global>
	.main_menu {
		display: flex;
		height: 40px;
		background-color: rgb(223, 69, 27);
	}
	.main_menu a{
		display: flex;
		align-items: center;
		padding: 0 8px;
		color: aliceblue;
		text-decoration: none;
		transition: background 300ms ease-in-out;
	}
	.main_menu a:hover{
		background: rgb(17, 233, 27);
	}
	.header{
		background: rgb(230, 60, 13);
	}
	.header_info{
		height: 80px;
	}
	.banner{
		height: 200px;
	}
	.categories{
		height: 120px;
	}
	.list {
		display: flex;
		height: 120px;
	}
	.list div{
		height: 100%;
		display: flex;
		max-width: 120px;
		text-align: center;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid rgb(17, 17, 19);
		border-radius: 4px;
		margin-right: 3px;
		
	}
	.container{
		max-width: 1280px;
		
		margin: 0 auto;
	}
	.footer{
		height: 120px;
		
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
		
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
